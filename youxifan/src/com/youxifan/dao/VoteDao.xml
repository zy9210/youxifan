<mapper namespace="Vote">

    <select id="queryVote" resultType="Vote"  >
        select 
		   Vote_id as Voteid,
		   Vote_name as Votename,
		   Vote_point as Votepoint
		from Vote
		order by Vote.Vote_point desc
    </select>
    
    <select id="queryVoteLikeName" resultType="Vote"  >
select 
   Vote_id as Voteid,
   Vote_name as Votename,
   Vote_point as Votepoint
from Vote
where Vote.Vote_name like '%'+#{likename}+'%'
order by Vote.Vote_point desc
    </select>

    <select id="queryVoteByName" resultType="Vote"  >
select 
   Vote_id as Voteid,
   Vote_name as Votename,
   Vote_point as Votepoint
from Vote
where Vote.Vote_name = #{Votename}
order by Vote.Vote_point desc
    </select>
    
    <insert id="insertVote" parameterType="Vote">   
insert into Vote (Vote_name,Vote_point) values (#{Votename},1);
	</insert>  
    
    
    
    <update id="updateVote" parameterType="Vote"> 
update Vote set Vote.Vote_point=Vote_point+1 where Vote.Vote_id = #{Voteid}
	</update> 



    <delete id="delVote" parameterType="Vote" > 
		delete from student where id = #{id} 
	</delete>
	
</mapper>