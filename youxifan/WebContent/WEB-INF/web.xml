	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml,/WEB-INF/spring-servlet.xml,/WEB-INF/applicationBigString.xml
		</param-value>
		<!--不是默认名字的时候需要打开  默认: WEB-INF文件夹下寻找名为[servlet-name]-servlet.xml
			<param-value>classpath:applicationContext*.xml</param-value> 
			<param-value> /WEB-INF/dispathContext-servlet.xml</param-value>  -->
	</context-param>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<!--  -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>
			com.youxifan.utils.LoginFilter
		</filter-class>
		<init-param>
			<param-name>extpaths</param-name>
			<param-value>
        		/css/,
        		/images/,
        		/jsp/,
        		/script/,
        		/login,
        		/checkEmail/,
        		/getpwd/,
        		/ImageValidServlet,
        		/logout
			</param-value>
		</init-param>
		<init-param>
			<param-name>loginJSP</param-name>
			<param-value>/user/login</param-value>
		</init-param> 
	</filter>
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
<!--  -->
	<servlet>
		<servlet-name>ImageValidServlet</servlet-name>
		<servlet-class>
			com.youxifan.utils.ImageValidServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageValidServlet</servlet-name>
		<url-pattern>/ImageValidServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>fileupload</servlet-name>
		<servlet-class>com.youxifan.utils.Upload</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileupload</servlet-name>
		<url-pattern>/fileupload</url-pattern>
	</servlet-mapping>
	
	
	<!--  -->
	
	<servlet-mapping> 
		<servlet-name>default</servlet-name> 
		<url-pattern>/script/*</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>default</servlet-name> 
		<url-pattern>/images/*</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>default</servlet-name> 
		<url-pattern>/css/*</url-pattern> 
	</servlet-mapping>
	 
